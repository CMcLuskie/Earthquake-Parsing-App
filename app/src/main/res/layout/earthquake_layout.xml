<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <LinearLayout
            android:id="@+id/earthquakeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dateDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/timeDisplay"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"

                android:layout_marginStart="1dp"
                android:layout_marginTop="0dp"

                android:text="@string/Placeholder_Date"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/timeDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/Placeholder_Time"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/locationDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/dateDisplay"
                android:text="@string/Placeholder_Location"
                android:textSize="20sp" />



            <!--<TextView
                android:id="@+id/depthDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Placeholder_Depth"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/magDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Placeholder_Magnitude"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/latDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Placeholder_Latitude"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/longDisplay"ss
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Placeholder_Longitude"
                android:textSize="20sp" />-->
            <Button
                android:id="@+id/infoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:text="@string/BUTTON_More_Info" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>