<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <RelativeLayout
            android:id="@+id/widget37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            >

            <TextView
                android:id="@+id/dateDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/infoButton"
                android:layout_toEndOf="@+id/locationInitials"
                android:text="@string/Placeholder_Date"/>

            <TextView
                android:id="@+id/locationInitials"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="UK"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/infoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="0dp"
                android:text="@string/BUTTON_More_Info" />

            <TextView
                android:id="@+id/locationDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/timeDisplay"
                android:layout_toRightOf="@+id/locationInitials"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:text="@string/Placeholder_Location"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/timeDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/dateDisplay"
                android:layout_toRightOf="@+id/dateDisplay"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:text="@string/Placeholder_Time" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>